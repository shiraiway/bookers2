<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <ul class="error-box">
    <h3 class="error-title">
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <div class="error-message">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %><!--エラー-->

<div class="container px-5 px-sm-0">
  <div class="row"><!--flex-->

    <div class="col-md-3"><!--左側-->

    <!--ユーザーインフォ-->
    <%= render 'users/info',user: @user %>
    <!--ユーザーインフォ-->

    <!--新規投稿-->
    <%= render 'books/form',book: @book %>
    <!--新規投稿-->

    </div><!--左側-->

    <div class="col-md-8 offset-md-1"><!--右側-->

      <!--投稿一覧画面-->
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <div><%= attachment_image_tag book.user, :profile_image, size:"40x40", fallback:"no_image.jpg" %></div>
              <% end %>
            </td>

            <td>
              <%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
              <% end %>
            </td>

            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div><!--右側-->

  </div><!--flex-->
</div><!--container-->