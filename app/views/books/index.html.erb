
<h2>New book</h2><!--新規投稿-->
<%= form_with model: @book,local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field:title %>
  <h4>option</h4>
  <%= f.text_area:body %>

  <%=f.submit"Create Book" %>

<% end %><!--新規投稿-->

<h2>books</h2><!--投稿一覧画面-->

<% @books.each do |book| %>
<div>
  <p>ユーザー画像 <%= book.user.name %></p>
  <%= link_to book_path(book.id) do %>
    <p>title: <%= book.title %></p>
  <% end %>
  <p>option: <%= book.body %></p>
</div>
<% end %>