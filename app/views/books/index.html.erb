<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <ul class="error-box">
    <h3 class="error-title">
      <%= @book.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <div class="error-message">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %><!--エラー-->

<h2>New book</h2><!--新規投稿-->
<%= form_with model: @book,local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field:title %>
  <h4>option</h4>
  <%= f.text_area:body %>

  <%=f.submit"Create Book" %>

<% end %><!--新規投稿-->

<h2>books</h2><!--投稿一覧画面-->

<% @books.each do |book| %>
<div>
  <p>ユーザー画像<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback:"no_image.jpg" %></p>
  <h4>Title</h4>
  <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
  <% end %>
  <h4>Opinion</h4>
  <p><%= book.body %></p>
</div>
<% end %>