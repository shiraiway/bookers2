<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'><!--左側-->
    <!--ユーザーインフォ-->
    <%= render 'users/info',user: @user %>
    <!--ユーザーインフォ-->

    <!--新規投稿-->
    <%= render 'books/form',book: @book %>
    <!--新規投稿-->
    </div><!--左側-->

    <div class='col-md-8 offset-md-1'><!--右側-->

      <h2>Books</h2><!--ユーザーが投稿したBook一覧-->

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <div><%= attachment_image_tag book.user, :profile_image, size:"40x40", fallback:"no_image.jpg" %></div>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %><!--ユーザーが投稿したBook一覧-->
        </tbody>
      </table>

    </div><!--右側-->
  </div><!--row-->
</div><!--container-->

