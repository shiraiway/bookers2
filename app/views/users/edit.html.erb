<!--ユーザー編集画面-->
<h2>User info</h2>

<!--エラーメッセージ-->
<% if @user.errors.any? %>
  <ul class="error-box">
    <h3 class="error-title">
      <%= @user.errors.count %> error prohibited this obj from being saved:
    </h3>
    <div class="error-message">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  </ul>
<% end %><!--エラー-->

<%= form_with model:@user, local:true do |f| %>
<label for="inputName">Name</label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>

<label for="inputImage">Image</label>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  
<label for="inputIntroducton">Introduction</label>
<%= f.text_area :introduction, autofocus: true, id:"inputIntroducton" %>

<%= f.submit"Update User" %>

<% end %>